<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:minHeight="179dp"
  tools:context="edu.cnm.deepdive.justanotherandroidproject.MainActivity">

  <EditText
    android:id="@+id/Editabletext"
    android:layout_width="0dp"
    android:layout_height="55dp"
    android:layout_marginTop="16dp"
    android:hint="@string/edit_message"
    android:text="Pick a resource"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toEndOf="@+id/button3"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintVertical_bias="0.0"/>
  <Button
    android:id="@+id/button3"
    android:layout_width="173dp"
    android:layout_height="69dp"
    android:layout_marginStart="8dp"
    android:text="@string/push_here"
    app:layout_constraintBaseline_toBaselineOf="@+id/Editabletext"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/Editabletext"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"/>

</android.support.constraint.ConstraintLayout>
